<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>REST Client Sample</display-name>


  <servlet>
    <servlet-name>restClientServlet</servlet-name>
    <servlet-class>RESTClientServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Product Tables</servlet-name>
    <servlet-class>productTables</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Product Page</servlet-name>
    <servlet-class>productPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Session</servlet-name>
    <servlet-class>Session</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Add To Cart</servlet-name>
    <servlet-class>addToCart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Display Cart</servlet-name>
    <servlet-class>displayCart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Order Success</servlet-name>
    <servlet-class>orderSuccess</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>restClientServlet</servlet-name>
    <url-pattern>/restcli</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Product Tables</servlet-name>
    <url-pattern>/productTables</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Product Page</servlet-name>
    <url-pattern>/productPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Session</servlet-name>
    <url-pattern>/session</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Add To Cart</servlet-name>
    <url-pattern>/addToCart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Display Cart</servlet-name>
    <url-pattern>/displayCart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Order Success</servlet-name>
    <url-pattern>/orderSuccess</url-pattern>
  </servlet-mapping>


</web-app>
